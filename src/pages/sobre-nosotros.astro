---
import MainLayout from "../layouts/MainLayout.astro";

// Lista de siglas con su explicación description
const acronyms = [
  {
    acronym: "FOB",
    description: "Free On Board",
    image: "/fob.png",
  },
  {
    acronym: "B2B",
    description: "Business to Business",
    image: "/b2b.png",
  },
  {
    acronym: "AWB",
    description: "Air Waybill",
    image: "/awb.png",
  },
  {
    acronym: "C/O",
    description: "Certificate Origin",
    image: "/co.png",
  },
  {
    acronym: "CRM",
    description: "Customer Relationship Management",
    image: "/crm.png",
  },
  {
    acronym: "INCOTERMS",
    description: "International Commercial Terms",
    image: "/incoterms.png",
  },
  {
    acronym: "EDD",
    description: "Expected Delivery Date",
    image: "/edd.png",
  },
];
---

<MainLayout
  metaTitle="Sobre Nosotros"
  metaDescription="Conoce la historia, valores y presencia global de El Dorado Air Cargo. Más de 30 años construyendo confianza con soluciones logísticas seguras, eficientes y personalizadas."
>
  <!-- Banner - Sobre Nosotros -->
  <section
    class="bg-blue-dark shadow-sm p-6 md:p-10 mb-14 md:mb-20 flex flex-col md:flex-row items-center gap-6 font-open-sans min-h-52 justify-center md:justify-start"
  >
    <div class="md:ml-10 text-justify">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
        Sobre Nosotros
      </h1>
      <p class="text-white max-w-xl">
        En El Dorado Air Cargo construimos confianza desde hace más de 30 años.
        Nuestro equipo combina experiencia, compromiso y visión para ofrecer
        soluciones logísticas que conectan negocios con el mundo.
      </p>
    </div>
  </section>

  <!-- Mapa con contexto -->
  <section class="main-container font-open-sans">
    <div class="max-w-6xl mx-auto text-center mb-4">
      <h2 class="text-2xl md:text-3xl font-bold text-blue-dark mb-4">
        Conexiones globales que cruzan fronteras
      </h2>
      <p class="text-lg text-black">
        Nuestro mapa refleja la presencia internacional de El Dorado Air Cargo.
        Cada marca indica los países desde donde exportamos o importamos
        mercancía para nuestros clientes.
      </p>
    </div>

    <!-- Mapa y lista de destinos alineados -->

    <div
      class="flex flex-col lg:flex-row justify-center items-stretch gap-10 my-10 mx-auto "
    >
      <!-- Imagen del mapamundi -->
      <div class="w-full lg:w-2/3 flex items-stretch">
        <img
          src="/mapamundi.jpg"
          alt="Mapa de exportaciones e importaciones de El Dorado Air Cargo con cobertura internacional en América, Europa, Asia y Oceanía"
          class="w-full h-full object-contain rounded-xl shadow-xl"
        />
      </div>

      <!-- Card de destinos -->
      <div
        class="w-full lg:w-1/3 flex flex-col  bg-gradient-to-br bg-yellow-orange p-6 rounded-xl shadow-xl text-white font-semibold"
      >
        <h3 class="text-2xl font-bold mb-4 border-b border-white pb-4">
          Destinos Internacionales
        </h3>
        <ul class="text-lg leading-relaxed space-y-1">
          <li>• Chile</li>
          <li>• Ecuador</li>
          <li>• Perú</li>
          <li>• Brasil</li>
          <li>• Panamá</li>
          <li>• Costa Rica</li>
          <li>• Guatemala</li>
          <li>• México</li>
          <li>• USA (Miami)</li>
          <li>• Canadá</li>
          <li>• España</li>
          <li>• Alemania</li>
          <li>• Francia</li>
          <li>• Italia</li>
          <li>• Inglaterra</li>
          <li>• India</li>
          <li>• China</li>
          <li>• Taiwán</li>
          <li>• Australia</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Sección de acronimos -->
  <section class="main-container font-open-sans mb-14">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-blue-dark mb-4">
        Acrónimos
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Acrónimos de comercio exterior que más utilizamos
      </p>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 justify-items-center"
    >
      {
        acronyms.map(({ acronym, description, image }, index) => (
          <div
            class="w-full max-w-md bg-white rounded-xl shadow-lg p-6 flex flex-col items-center text-center space-y-4 transition-transform duration-700 hover:scale-105 opacity-0 translate-y-10 animate-fade-in-up"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <img
              src={image}
              alt={acronym}
              class="w-24 h-24 object-cover rounded-full"
            />
            <h3 class="text-4xl font-extrabold text-blue-dark">{acronym}</h3>
            <p class="text-gray-600 text-sm">{description}</p>
          </div>
        ))
      }
    </div>
  </section>

  <style>
    @keyframes fade-in-up {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.8s ease-out forwards;
    }
  </style>
</MainLayout>
